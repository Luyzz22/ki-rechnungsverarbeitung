<script>
document.addEventListener('DOMContentLoaded', function() {
    fetch('/api/ai/dashboard-analysis').then(r=>r.json()).then(d=>{
        const el = document.getElementById('ai-cfo-text');
        if(el) el.innerHTML = d.analysis;
    }).catch(e=>{});
});

function openAiDrilldown() {
    document.getElementById('aiDrilldownModal').classList.add('active');
    fetch('/api/ai/drilldown').then(r=>r.json()).then(data=>{
        let html = '';
        html += '<h6 class="text-uppercase text-muted mb-3" style="font-size:0.75rem">üî• Kostentreiber</h6>';
        if(data.top_movers && data.top_movers.length) {
            data.top_movers.forEach(i => html += `<div class="d-flex justify-content-between mb-2 border-bottom pb-1"><span>${i.name}</span><span class="text-danger font-weight-bold">${i.amount.toLocaleString('de-DE', {minimumFractionDigits:2})} ‚Ç¨</span></div>`);
        } else { html += '<p class="text-muted small">Keine Daten.</p>'; }
        
        html += '<h6 class="text-uppercase text-muted mb-3 mt-4" style="font-size:0.75rem">üßæ Details</h6>';
        if(data.recent_invoices && data.recent_invoices.length) {
            data.recent_invoices.forEach(i => html += `<div class="d-flex justify-content-between mb-2 border-bottom pb-1"><div><strong>${i.vendor}</strong><br><small class="text-muted">${i.cat}</small></div><span>${i.amount.toLocaleString('de-DE', {minimumFractionDigits:2})} ‚Ç¨</span></div>`);
        } else { html += '<p class="text-muted small">Keine Daten.</p>'; }
        
        if(data.ai_summary) html += `<div class="alert alert-primary mt-3 mb-0">${data.ai_summary}</div>`;
        document.getElementById('aiDrilldownBody').innerHTML = html;
    });
}
</script>


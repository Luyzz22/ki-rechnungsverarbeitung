<script src="/static/js/main.js"></script>

<!-- Dropzone-JS f√ºr Drag & Drop -->
<script>
  document.addEventListener('DOMContentLoaded', function () {
    const dropzone = document.getElementById('upload-dropzone');
    const fileInput = document.getElementById('files');
    const form = document.getElementById('upload-form');

    if (!dropzone || !fileInput || !form) return;

    // Klick auf die Fl√§che √∂ffnet Datei-Dialog (au√üer Button selbst)
    dropzone.addEventListener('click', function (e) {
      if (e.target.tagName.toLowerCase() !== 'button') {
        fileInput.click();
      }
    });

    // Visuelles Highlight beim Drag & Drop
    ['dragenter', 'dragover'].forEach(eventName => {
      dropzone.addEventListener(eventName, e => {
        e.preventDefault();
        e.stopPropagation();
        dropzone.classList.add('upload-dropzone--active');
      });
    });

    ['dragleave', 'drop'].forEach(eventName => {
      dropzone.addEventListener(eventName, e => {
        e.preventDefault();
        e.stopPropagation();
        dropzone.classList.remove('upload-dropzone--active');
      });
    });

    // Dateien in das versteckte File-Input √ºbernehmen
    dropzone.addEventListener('drop', e => {
      const dt = e.dataTransfer;
      if (dt && dt.files && dt.files.length) {
        fileInput.files = dt.files;
        // Formular automatisch absenden:
        form.submit();
      }
    });

    // Auch beim normalen Datei-Dialog direkt absenden
    fileInput.addEventListener('change', () => {
      if (fileInput.files && fileInput.files.length) {
        form.submit();
      }
    });
  });
</script>

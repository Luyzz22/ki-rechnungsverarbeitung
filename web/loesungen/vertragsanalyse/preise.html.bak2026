<script>
// Billing Toggle
const toggle = document.getElementById('billingToggle');
const cards = document.querySelectorAll('.pricing-card');
const billingLabels = document.querySelectorAll('.billing-toggle span[data-billing]');

toggle.addEventListener('click', function() {
  this.classList.toggle('yearly');
  const isYearly = this.classList.contains('yearly');
  
  cards.forEach(card => {
    if (isYearly) {
      card.classList.add('yearly');
    } else {
      card.classList.remove('yearly');
    }
  });
  
  billingLabels.forEach(label => {
    if (label.dataset.billing === 'yearly' && isYearly) {
      label.classList.add('active');
    } else if (label.dataset.billing === 'monthly' && !isYearly) {
      label.classList.add('active');
    } else {
      label.classList.remove('active');
    }
  });
});

// Auth Status
async function checkAuthStatus() {
  const guestEl = document.getElementById('authGuest');
  const userEl = document.getElementById('authUser');
  const nameEl = document.getElementById('accountName');
  const emailEl = document.getElementById('accountEmail');
  try {
    const res = await fetch('https://app.sbsdeutschland.com/api/user', {credentials: 'include'});
    const user = await res.json();
    if (user && user.logged_in) {
      if (guestEl) guestEl.style.display = 'none';
      if (userEl) userEl.style.display = 'block';
      if (nameEl) nameEl.textContent = user.name || 'Account';
      if (emailEl) emailEl.textContent = user.email || '';
    }
  } catch(e) {}
}
document.addEventListener('DOMContentLoaded', checkAuthStatus);
</script>

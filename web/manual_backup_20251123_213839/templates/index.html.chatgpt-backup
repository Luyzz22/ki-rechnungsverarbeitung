<script>
document.getElementById('year').textContent = new Date().getFullYear();

const dropZone = document.getElementById('dropZone');
const fileInput = document.getElementById('fileInput');
const fileList = document.getElementById('fileList');
const processBtn = document.getElementById('processBtn');
const status = document.getElementById('status');
let selectedFiles = [];

dropZone.addEventListener('click', () => fileInput.click());
dropZone.addEventListener('dragover', (e) => {
    e.preventDefault();
    dropZone.classList.add('dragover');
});
dropZone.addEventListener('dragleave', () => dropZone.classList.remove('dragover'));
dropZone.addEventListener('drop', (e) => {
    e.preventDefault();
    dropZone.classList.remove('dragover');
    handleFiles(e.dataTransfer.files);
});
fileInput.addEventListener('change', (e) => handleFiles(e.target.files));

function handleFiles(files) {
    const newFiles = Array.from(files).filter(f => 
        f.name.endsWith('.pdf') || 
        f.name.endsWith('.png') || 
        f.name.endsWith('.jpg') || 
        f.name.endsWith('.jpeg')
    );
    
    newFiles.forEach(newFile => {
        const exists = selectedFiles.some(f => f.name === newFile.name);
        if (!exists) {
            selectedFiles.push(newFile);
        }
    });
    
    updateFileList();
    processBtn.style.display = selectedFiles.length > 0 ? 'inline-block' : 'none';
}

function updateFileList() {
    fileList.innerHTML = '';
    selectedFiles.forEach((file, index) => {
        const div = document.createElement('div');
        div.className = 'file-item';
        
        const fileIcon = file.name.endsWith('.pdf') ? 'üìÑ' : 'üñºÔ∏è';
        
        div.innerHTML = `
            <span>${fileIcon} ${file.name} <span style="color: var(--grey-text);">(${(file.size / 1024).toFixed(1)} KB)</span></span>
            <button class="btn-remove" onclick="removeFile(${index})">‚úï</button>
        `;
        fileList.appendChild(div);
    });
}

function removeFile(index) {
    selectedFiles.splice(index, 1);
    updateFileList();
    processBtn.style.display = selectedFiles.length > 0 ? 'inline-block' : 'none';
}

processBtn.addEventListener('click', async () => {
    if (selectedFiles.length === 0) return;
    
    processBtn.disabled = true;
    status.innerHTML = `
        <div class="alert alert-info">
            <div class="processing-spinner"></div>
            <p style="margin-top: 10px; font-weight: 500;">Upload l√§uft...</p>
        </div>
    `;

    const formData = new FormData();
    selectedFiles.forEach(file => formData.append('files', file));

    try {
        const uploadResponse = await fetch('/api/upload', { 
            method: 'POST', 
            body: formData 
        });
        const uploadResult = await uploadResponse.json();

        if (uploadResult.success) {
            status.innerHTML = `
                <div class="alert alert-info">
                    <div class="processing-spinner"></div>
                    <p style="margin-top: 10px; font-weight: 500;">KI-Verarbeitung l√§uft...</p>
                    <p style="font-size: 11px; margin-top: 4px; opacity: 0.8;">
                        ${selectedFiles.length} ${selectedFiles.length === 1 ? 'Rechnung' : 'Rechnungen'} werden analysiert
                    </p>
                </div>
            `;
            
            const processResponse = await fetch('/api/process/' + uploadResult.batch_id, { 
                method: 'POST' 
            });
            const processResult = await processResponse.json();
            
            if (processResult.success) {
                checkStatus(uploadResult.batch_id);
            } else {
                status.innerHTML = `
                    <div class="alert alert-danger">
                        ‚ùå Fehler bei der Verarbeitung. Bitte versuchen Sie es erneut.
                    </div>
                `;
                processBtn.disabled = false;
            }
        } else {
            status.innerHTML = `
                <div class="alert alert-danger">
                    ‚ùå Fehler beim Upload. Bitte versuchen Sie es erneut.
                </div>
            `;
            processBtn.disabled = false;
        }
    } catch (error) {
        console.error('Error:', error);
        status.innerHTML = `
            <div class="alert alert-danger">
                ‚ùå Verbindungsfehler. Bitte pr√ºfen Sie Ihre Internetverbindung.
            </div>
        `;
        processBtn.disabled = false;
    }
});

async function checkStatus(batchId) {
    try {
        const response = await fetch('/api/status/' + batchId);
        const result = await response.json();
        
        if (result.status === 'processing') {
            setTimeout(() => checkStatus(batchId), 2000);
        } else if (result.status === 'completed') {
            status.innerHTML = `
                <div class="alert alert-success">
                    <h4>‚úÖ Verarbeitung abgeschlossen!</h4>
                    <p style="margin-top: 8px;">
                        Ihre ${selectedFiles.length} ${selectedFiles.length === 1 ? 'Rechnung wurde' : 'Rechnungen wurden'} 
                        erfolgreich verarbeitet.
                    </p>
                    <a href="/results/${batchId}" class="btn-results">üìä Ergebnisse ansehen</a>
                </div>
            `;
            processBtn.disabled = false;
            selectedFiles = [];
            updateFileList();
            processBtn.style.display = 'none';
        } else if (result.status === 'failed') {
            status.innerHTML = `
                <div class="alert alert-danger">
                    ‚ùå Verarbeitung fehlgeschlagen. Bitte versuchen Sie es erneut.
                </div>
            `;
            processBtn.disabled = false;
        }
    } catch (error) {
        console.error('Status check error:', error);
        setTimeout(() => checkStatus(batchId), 3000);
    }
}
</script>

</body>
</html>

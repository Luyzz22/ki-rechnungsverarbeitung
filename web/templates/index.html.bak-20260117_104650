<!-- Toast Container -->
<div id="toastContainer"></div>

<!-- JavaScript -->
<script src="/static/js/main.js"></script>
<script>
// ============================================
// TOAST SYSTEM
// ============================================
function showToast(message, type = 'info', duration = 4000) {
  const container = document.getElementById('toastContainer');
  if (!container) return;

  const toast = document.createElement('div');
  toast.className = 'toast ' + type;

  const icons = {
    success: '‚úÖ',
    error: '‚ùå',
    info: '‚ÑπÔ∏è',
    warning: '‚ö†Ô∏è'
  };

  toast.innerHTML = `
    <span class="toast-icon">${icons[type] || icons.info}</span>
    <div class="toast-content">
      <div class="toast-title">${type === 'success' ? 'Erfolg' : type === 'error' ? 'Fehler' : type === 'warning' ? 'Warnung' : 'Info'}</div>
      <div class="toast-message">${message}</div>
    </div>
    <button class="toast-close" onclick="this.parentElement.remove()">√ó</button>
  `;

  container.appendChild(toast);

  setTimeout(() => {
    toast.style.animation = 'slideOut 0.3s ease-out forwards';
    setTimeout(() => toast.remove(), 300);
  }, duration);
}

// ============================================
// FILE UPLOAD LOGIC
// ============================================
const dropzone = document.getElementById('upload-dropzone');
const fileInput = document.getElementById('upload-file-input');
const browseBtn = document.getElementById('upload-browse-btn');
const fileListSection = document.getElementById('fileListSection');
const fileList = document.getElementById('fileList');
const fileCountBadge = document.getElementById('fileCountBadge');
const processBtn = document.getElementById('processBtn');
const progressSection = document.getElementById('progressSection');
const progressFill = document.getElementById('progressFill');
const progressText = document.getElementById('progressText');
const progressDetail = document.getElementById('progressDetail');

let uploadedFiles = [];

// Browse button click
browseBtn.addEventListener('click', (e) => {
  e.stopPropagation();
  fileInput.click();
});

// Dropzone click
dropzone.addEventListener('click', () => {
  fileInput.click();
});

// File input change
fileInput.addEventListener('change', (e) => {
  handleFiles(e.target.files);
});

// Drag and Drop
dropzone.addEventListener('dragover', (e) => {
  e.preventDefault();
  dropzone.classList.add('dragover');
});

dropzone.addEventListener('dragleave', (e) => {
  e.preventDefault();
  dropzone.classList.remove('dragover');
});

dropzone.addEventListener('drop', (e) => {
  e.preventDefault();
  dropzone.classList.remove('dragover');
  handleFiles(e.dataTransfer.files);
});

// Handle files
function handleFiles(files) {
  const validTypes = ['application/pdf', 'image/png', 'image/jpeg', 'text/xml', 'application/xml'];
  const maxSize = 20 * 1024 * 1024; // 20MB

  Array.from(files).forEach(file => {
    // Check type
    const isValidType = validTypes.some(type => file.type.includes(type.split('/')[1])) || 
                        file.name.endsWith('.xml');
    
    if (!isValidType) {
      showToast(`${file.name}: Ung√ºltiges Format`, 'error');
      return;
    }

    // Check size
    if (file.size > maxSize) {
      showToast(`${file.name}: Datei zu gro√ü (max. 20MB)`, 'error');
      return;
    }

    // Check duplicate
    if (uploadedFiles.some(f => f.name === file.name)) {
      showToast(`${file.name}: Bereits hinzugef√ºgt`, 'warning');
      return;
    }

    uploadedFiles.push(file);
    showToast(`${file.name} hinzugef√ºgt`, 'success');
  });

  updateFileList();
}

// Update file list display
function updateFileList() {
  fileList.innerHTML = '';
  
  if (uploadedFiles.length === 0) {
    fileListSection.classList.remove('active');
    processBtn.disabled = true;
    return;
  }

  fileListSection.classList.add('active');
  processBtn.disabled = false;
  fileCountBadge.textContent = uploadedFiles.length;

  uploadedFiles.forEach((file, index) => {
    const icon = file.type.includes('pdf') ? 'üìÑ' : 
                 file.type.includes('image') ? 'üñºÔ∏è' : 'üìã';
    
    const size = (file.size / 1024).toFixed(1) + ' KB';
    
    const item = document.createElement('div');
    item.className = 'file-item';
    item.innerHTML = `
      <div class="file-item-info">
        <span class="file-item-icon">${icon}</span>
        <div>
          <div class="file-item-name">${file.name}</div>
          <div class="file-item-size">${size}</div>
        </div>
      </div>
      <button class="file-item-remove" onclick="removeFile(${index})">Entfernen</button>
    `;
    fileList.appendChild(item);
  });
}

// Remove file
function removeFile(index) {
  const fileName = uploadedFiles[index].name;
  uploadedFiles.splice(index, 1);
  updateFileList();
  showToast(`${fileName} entfernt`, 'info');
}

// Process files
processBtn.addEventListener('click', async () => {
  if (uploadedFiles.length === 0) return;

  // Show progress
  fileListSection.classList.remove('active');
  progressSection.classList.add('active');
  processBtn.disabled = true;

  const formData = new FormData();
  uploadedFiles.forEach(file => {
    formData.append('files', file);
  });

  try {
    progressText.textContent = 'Dateien werden hochgeladen...';
    progressFill.style.width = '20%';

    const response = await fetch('/upload', {
      method: 'POST',
      body: formData
    });

    progressFill.style.width = '50%';
    progressText.textContent = 'KI verarbeitet Rechnungen...';

    if (!response.ok) {
      throw new Error('Upload fehlgeschlagen');
    }

    const result = await response.json();

    progressFill.style.width = '100%';
    progressText.textContent = 'Verarbeitung abgeschlossen!';
    progressDetail.textContent = `${uploadedFiles.length} Rechnung(en) erfolgreich verarbeitet`;

    showToast('Rechnungen erfolgreich verarbeitet!', 'success');

    // Redirect after short delay
    setTimeout(() => {
      window.location.href = '/history';
    }, 1500);

  } catch (error) {
    console.error('Error:', error);
    showToast('Fehler bei der Verarbeitung: ' + error.message, 'error');
    
    // Reset UI
    progressSection.classList.remove('active');
    fileListSection.classList.add('active');
    processBtn.disabled = false;
    progressFill.style.width = '0%';
  }
});
</script>

</body>
</html>

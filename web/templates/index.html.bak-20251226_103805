<div id="toastContainer"></div>

<script>
  // --- Toasts ---
  function showToast(message, type = 'info', duration = 4000) {
    const container = document.getElementById('toastContainer');
    if (!container) return;

    const toast = document.createElement('div');
    toast.className = 'toast ' + type;

    const icons = {
      success: '‚úÖ',
      error: '‚ùå',
      info: '‚ÑπÔ∏è',
      warning: '‚ö†Ô∏è'
    };

    const titles = {
      success: 'Erfolg',
      error: 'Fehler',
      info: 'Information',
      warning: 'Warnung'
    };

    toast.innerHTML =
      '<div class="toast-icon">' +
      (icons[type] || '‚ÑπÔ∏è') +
      '</div>' +
      '<div class="toast-content">' +
      '<div class="toast-title">' +
      (titles[type] || 'Info') +
      '</div>' +
      '<div class="toast-message">' +
      message +
      '</div>' +
      '</div>' +
      '<button class="toast-close" onclick="this.parentElement.remove()">√ó</button>';

    container.appendChild(toast);

    setTimeout(function () {
      toast.style.animation = 'slideOut 0.3s ease-in';
      setTimeout(function () { toast.remove(); }, 300);
    }, duration);
  }

  // --- Einfacher Error-Wrapper ---
  function showError(errorTypeOrMessage, customMessage) {
    var msg =
      typeof errorTypeOrMessage === 'string'
        ? (customMessage || errorTypeOrMessage)
        : (customMessage || 'Ein Fehler ist aufgetreten.');
    showToast(msg, 'error', 5000);
  }

  // === Upload-Logik ===
  let files = [];
  const MAX_FILES = Infinity;
  const WARN_BATCH_FILES = 200;

  function addFiles(newFiles) {
    const arr = Array.prototype.slice.call(newFiles || []);
    if (!arr.length) return;

    for (var i = 0; i < arr.length; i++) {
      var f = arr[i];
      if (f.size > 20 * 1024 * 1024) {
        showError('file_too_large', f.name + ' ist zu gro√ü (max. 20 MB).');
        continue;
      }
      files.push(f);
    }

    // Hinweis bei sehr gro√üen Batches
    if (files.length > WARN_BATCH_FILES) {
      showToast(
        'Gro√üer Batch erkannt (' + files.length + ' Dateien). ' +
        'F√ºr maximale Stabilit√§t empfehlen wir, sehr gro√üe Mengen in mehrere Uploads aufzuteilen.',
        'warning',
        7000
      );
    }

    // Optionales Hard-Limit, falls MAX_FILES irgendwann gesetzt wird
    if (typeof MAX_FILES !== 'undefined' &&
        MAX_FILES !== Infinity &&
        files.length > MAX_FILES) {
      files = files.slice(0, MAX_FILES);
    }

    renderFileList();
  }

  function renderFileList() {
    var fileListBox = document.getElementById('fileListBox');
    var fileList = document.getElementById('fileList');
    var fileCount = document.getElementById('fileCount');

    if (!fileListBox || !fileList || !fileCount) return;

    if (!files.length) {
      fileListBox.style.display = 'none';
      return;
    }

    fileListBox.style.display = 'block';
    fileCount.textContent = String(files.length);
    fileList.innerHTML = '';

    files.forEach(function (f, index) {
      var icon = f.type === 'application/pdf' ? 'üìï' : 'üñºÔ∏è';
      var row = document.createElement('div');
      row.className = 'demo-file-row';

      row.innerHTML =
        '<div class="demo-file-main">' +
        '<div class="demo-file-icon">' + icon + '</div>' +
        '<div>' +
        '<div class="demo-file-name">' + f.name + '</div>' +
        '<div class="demo-file-size">' + (f.size / 1024 / 1024).toFixed(2) + ' MB</div>' +
        '</div>' +
        '</div>' +
        '<button class="demo-file-remove" data-index="' + index + '">‚úï</button>';

      var btn = row.querySelector('.demo-file-remove');
      btn.addEventListener('click', function () {
        removeFile(index);
      });

      fileList.appendChild(row);
    });
  }

  function removeFile(i) {
    files.splice(i, 1);
    renderFileList();
  }

  async function startProcessing() {
    var processBtn = document.getElementById('processBtn');
    var fileListBox = document.getElementById('fileListBox');
    var progressBox = document.getElementById('progressBox');
    var dropzone = document.getElementById('upload-dropzone');

    if (!files.length || !processBtn) return;

    processBtn.disabled = true;
    processBtn.classList.add('btn-loading');

    if (dropzone) dropzone.style.opacity = '0.4';
    if (fileListBox) fileListBox.style.display = 'none';
    if (progressBox) progressBox.style.display = 'block';

    try {
      var fd = new FormData();
      files.forEach(function (f) { fd.append('files', f); });

      console.log('Uploading', files.length, 'files');
      var r = await fetch('/api/upload', {
        method: 'POST',
        body: fd
      });
      var data = await r.json();

      if (data.error) {
        showError(data.error, data.error);
        if (data.redirect) window.location.href = data.redirect;
        return;
      }

      var jobId = data.batch_id || data.job_id;
      if (!jobId) {
        throw new Error('Kein Job-Identifier vom Server erhalten.');
      }

      connectWebSocket(jobId);
      showToast(
        'Upload erfolgreich! Verarbeitung gestartet ‚Ä¶',
        'success',
        3000
      );

      await fetch('/api/process/' + jobId, { method: 'POST' });
      pollProgress(jobId);
    } catch (e) {
      console.error(e);
      showError('processing_failed', 'Fehler beim Upload: ' + e.message);
      if (progressBox) progressBox.style.display = 'none';
      if (fileListBox) fileListBox.style.display = 'block';
    }
  }

  function pollProgress(jobId) {
    var progressFill = document.getElementById('progressFill');
    var progressText = document.getElementById('progressText');

    var timer = setInterval(async function () {
      try {
        var r = await fetch('/api/status/' + jobId);
        var d = await r.json();
        var processed = d.processed || 0;
        var total = d.total || 1;
        var pct = Math.round((processed / total) * 100);

        if (progressFill) progressFill.style.width = pct + '%';
        if (progressText) {
          progressText.textContent =
            processed + ' von ' + (d.total || 0) +
            ' Dateien verarbeitet ‚Äì ' + pct + '%';
        }

        if (d.status === 'completed') {
          clearInterval(timer);
          window.location.href = '/job/' + jobId;
        } else if (d.status === 'error') {
          clearInterval(timer);
          showError('processing_failed', 'Verarbeitung konnte nicht abgeschlossen werden.');
        }
      } catch (e) {
        console.error(e);
      }
    }, 2000);
  }

  // --- WebSocket f√ºr Live-Updates (optional) ---
  var ws = null;
  var currentJobId = null;

  function connectWebSocket(jobId) {
    currentJobId = jobId;
    var protocol = window.location.protocol === 'https:' ? 'wss:' : 'ws:';
    try {
      ws = new WebSocket(protocol + '//' + window.location.host + '/ws/' + jobId);
    } catch (e) {
      console.warn('WebSocket konnte nicht ge√∂ffnet werden:', e);
      return;
    }

    ws.onopen = function () {
      console.log('‚úÖ WebSocket connected');
    };

    ws.onmessage = function (event) {
      var message = JSON.parse(event.data);
      handleWebSocketUpdate(message);
    };

    ws.onerror = function (error) {
      console.error('‚ùå WebSocket error:', error);
    };

    ws.onclose = function () {
      console.log('WebSocket closed');
    };
  }

  function handleWebSocketUpdate(message) {
    var progressFill = document.getElementById('progressFill');
    var progressText = document.getElementById('progressText');
    var uploadStatus = document.getElementById('upload-status');

    if (!message || !message.type) return;

    if (message.type === 'progress') {
      if (progressFill && typeof message.percentage === 'number') {
        progressFill.style.width = message.percentage + '%';
      }
      if (progressText &&
          typeof message.current !== 'undefined' &&
          typeof message.total !== 'undefined') {
        progressText.textContent =
          message.current + ' von ' + message.total +
          ' Dateien verarbeitet ‚Äì ' + message.percentage + '%';
      }
      if (uploadStatus &&
          typeof message.current !== 'undefined' &&
          typeof message.total !== 'undefined') {
        uploadStatus.textContent =
          'Verarbeitung: ' + message.current + ' / ' + message.total;
      }
    } else if (message.type === 'job_complete') {
      if (ws) ws.close();
      if (currentJobId) {
        window.location.href = '/job/' + currentJobId;
      }
    } else if (message.type === 'error') {
      showError('processing_failed', message.error || 'Fehler bei der Verarbeitung.');
    }
  }

  // --- Initialisierung ---
  document.addEventListener('DOMContentLoaded', function () {
    var dropzone = document.getElementById('upload-dropzone');
    var browseBtn = document.getElementById('upload-browse-btn');
    var fileInput = document.getElementById('upload-file-input');
    var processBtn = document.getElementById('processBtn');

    if (dropzone) {
      function preventDefaults(e) {
        e.preventDefault();
        e.stopPropagation();
      }

      ['dragenter', 'dragover', 'dragleave', 'drop'].forEach(function (eventName) {
        dropzone.addEventListener(eventName, preventDefaults, false);
      });

      ['dragenter', 'dragover'].forEach(function (eventName) {
        dropzone.addEventListener(eventName, function () {
          dropzone.classList.add('is-dragover');
        });
      });

      ['dragleave', 'drop'].forEach(function (eventName) {
        dropzone.addEventListener(eventName, function () {
          dropzone.classList.remove('is-dragover');
        });
      });

      dropzone.addEventListener('drop', function (e) {
        var dt = e.dataTransfer;
        if (!dt || !dt.files || !dt.files.length) return;
        addFiles(dt.files);
      });
    }

    if (browseBtn && fileInput) {
      browseBtn.addEventListener('click', function () {
        fileInput.click();
      });

      fileInput.addEventListener('change', function (e) {
        if (e.target.files && e.target.files.length) {
          addFiles(e.target.files);
        }
      });
    }

    if (processBtn) {
      processBtn.addEventListener('click', startProcessing);
    }

    // Account-Namen im Header aktualisieren
    fetch('/api/user')
      .then(function (r) { return r.json(); })
      .then(function (u) {
        var toggle = document.querySelector('.account-toggle');
        var menu = document.querySelector('.account-menu');
        if (u.logged_in && u.name) {
          document.getElementById('accountName').textContent = u.name;
        } else if (toggle) {
          toggle.innerHTML =
            '<a href="/login?next=/" style="text-decoration:none;color:inherit;">üîë Login</a>';
          if (menu) menu.style.display = 'none';
        }
      })
      .catch(function () {});
  });
</script>


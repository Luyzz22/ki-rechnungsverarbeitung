<script>
async function startCheckout(plan) {
  // PrÃ¼fe ob eingeloggt
  try {
    const userResp = await fetch('https://app.sbsdeutschland.com/api/user', {credentials: 'include'});
    const user = await userResp.json();
    
    if (!user.logged_in) {
      // Redirect to login with return URL
      window.location.href = 'https://app.sbsdeutschland.com/login?next=' + encodeURIComponent(window.location.href);
      return;
    }
    
    // Erstelle Checkout Session
    const response = await fetch('https://app.sbsdeutschland.com/api/checkout/create-session', {
      method: 'POST',
      headers: {'Content-Type': 'application/json'},
      credentials: 'include',
      body: JSON.stringify({plan: plan})
    });
    
    const data = await response.json();
    
    if (data.url) {
      window.location.href = data.url;
    } else if (data.error) {
      alert('Fehler: ' + data.error);
    }
  } catch (e) {
    alert('Verbindungsfehler. Bitte versuchen Sie es erneut.');
  }
}
</script>
